<body>
  <header>
  </header>
  <% let question = 1; %>
  <% let corNum = 0; %>
  <main>
    <div class="container">
        <div class="main-content">
            <div class="modal-container" id="score-modal">
                <%let ques =  quiz.length;%>
                <%let woA =  ques - corA;%>
                <%let rate =  corA/ques;%>
                <div class="modal-content-container">
                    
                        
                        
                        <% if(rate>=0.5){ %>
                            <h1>Congratulations, you are amazing.</h1>
                          <% } else{ %>  
                            <h1>Better luck next time.</h1>
                         <% } %>                    
                    
                    <div class="grade-details">
                        <p>Attempts : <%=ques%></p>
                        <p>Wrong Answers : <%= woA%><span id="wrong-answers"></span></p>
                        <p>Right Answers : <%= corA%><span id="right-answers"></span></p>
                        <p>Grade : <%= rate*100%><span id="grade-percentage"></span>%</p>
                        <p ><span id="remarks"></span></p>
                    </div>
            
                    <div class="modal-button-container">
                        <a href="/question/1/0" style="color: black;"><i><strong>Continue</strong> </i></a>
                    </div>
            
                </div>
            </div>
        </div>
    </div>
  </main>

</body>
